<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AlexLights.Pages.RainbowPage">
    <ContentPage.Content>
        <StackLayout BackgroundColor="Black">
            <StackLayout VerticalOptions="CenterAndExpand">
                <Button Text="Small Rainbow" Clicked="OnSmallRainbow"/>
                <Button Text="Medium Rainbow" Clicked="OnMediumRainbow"/>
                <Button Text="Big Rainbow" Clicked="OnBigRainbow"/>
            </StackLayout>
            <Slider x:Name="brightnessVal" Minimum="0" Maximum="220"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>