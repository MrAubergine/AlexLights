<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AlexLights.Pages.SolidColourPage">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button BackgroundColor="Red" Clicked="OnRedClicked" Grid.Row="0" Grid.Column="0"/>
            <Button BackgroundColor="White" Clicked="OnWhiteClicked" Grid.Row="0" Grid.Column="1"/>
            <Button BackgroundColor="Green" Clicked="OnGreenClicked" Grid.Row="1" Grid.Column="0"/>
            <Button BackgroundColor="Blue" Clicked="OnBlueClicked" Grid.Row="1" Grid.Column="1"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>